#! /usr/bin/env bash
#
# Run Bro on a trace file.
#
# run-bro-on-trace <installed_policies_flag> <dir-to-set-as-cwd> <trace> <other Bro parameters>

. `dirname $0`/broctl-config.sh

use_installed_policies=$1
shift
cwd=$1
shift
trace=$1
shift

source ${scriptsdir}/set-bro-path

cd $cwd

echo $@ >.cmdline
touch .testing

${bro} -r $trace "$@"

